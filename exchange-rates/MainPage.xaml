<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exchange_rates.MainPage">

    <ScrollView>

        <Grid x:Name="mainGrid">
            <Entry x:Name="entry" FontSize="24" HorizontalTextAlignment="Center" VerticalOptions="Start" BackgroundColor="#FFFFFF" TextColor="#000000" MaximumHeightRequest="50" MaximumWidthRequest="200" MaxLength="20" Keyboard="Numeric" Margin="0,50,0,0"/>

            <Label Text="zł" FontSize="32" VerticalOptions="Start" HorizontalOptions="Center" Margin="250,50,0,0"/>

            <Button x:Name="btnSubmit" Text="Go" FontSize="22" HeightRequest="35" WidthRequest="75" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,110,0,0" Clicked="BtnSubmitClicked" />

            <Label x:Name="goldAmount" Text="You can buy: " FontSize="24" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>

    </ScrollView>

</ContentPage>
